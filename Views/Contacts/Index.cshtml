@model Diploma.Models.Contact

<h1>Контактная информация:</h1>

<div>
    <h3>Address:</h3>
    <p>@Model.Address</p>
</div>

<div>
    <h3>Phone:</h3>
    <p>@Model.Phone</p>
</div>

<div>
    <h3>Email:</h3>
    <p>@Model.Email</p>
</div>

@{
    if (User.IsInRole("Administrator"))
    {
        <div>
            <a asp-controller="Contact" asp-action="Create">Добавить контакт</a>
        </div>
    }
}
